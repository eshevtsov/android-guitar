<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launch_nav_graph"
    tools:ignore="InvalidNavigation,UnusedNavigation">

    <fragment
        android:id="@+id/login"
        android:name="com.eshevtsov.android.guitar.assistant.feature.login.LoginFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/main"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/main"
        android:name="com.eshevtsov.android.guitar.assistant.MainFragment"
        tools:layout="@layout/fragment_main" />

</navigation>