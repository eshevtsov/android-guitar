<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface"/>

    <style name="Widget.AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/default_elevation</item>
    </style>

    <style name="Widget.AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="elevation">@dimen/default_elevation</item>
        <item name="itemIconTint">@drawable/bottom_navigation_item_icon_tint</item>
        <item name="itemTextColor">@drawable/bottom_navigation_item_icon_tint</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.AppTheme.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="elevation">@dimen/default_elevation</item>
        <item name="android:textColor">@color/selector_outlined_button_text_color</item>
        <item name="strokeColor">@color/selector_outlined_button_background_tint</item>
        <item name="iconTint">@color/selector_outlined_button_text_color</item>
        <item name="backgroundTint">@color/selector_outlined_button_background_tint</item>
        <item name="rippleColor">@color/selector_outlined_button_ripple_color</item>
    </style>

    <style name="Widget.AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="elevation">@dimen/default_elevation</item>
        <item name="android:textColor">@color/selector_button_text_color</item>
        <item name="iconTint">@color/selector_button_text_color</item>
        <item name="backgroundTint">@color/selector_button_background_tint</item>
    </style>

    <style name="Widget.AppTheme.ShapeableImageView.Round" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.AppTheme.Round</item>
        <item name="elevation">@dimen/default_elevation</item>
    </style>

</resources>
